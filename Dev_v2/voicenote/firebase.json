{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/profile",
        "destination": "/profile.html"
      },
      {
        "source": "/record",
        "destination": "/record.html"
      },
      {
        "source": "/settings",
        "destination": "/settings.html"
      },
      {
        "source": "/settings/api",
        "destination": "/settings/api.html"
      },
      {
        "source": "/stats",
        "destination": "/stats.html"
      },
      {
        "source": "/voice-learning",
        "destination": "/voice-learning.html"
      },
      {
        "source": "/help",
        "destination": "/help.html"
      },
      {
        "source": "/debug",
        "destination": "/debug.html"
      },
      {
        "source": "/test",
        "destination": "/test.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/_next/static/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs18"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}