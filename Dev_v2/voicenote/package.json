{
  "name": "voicenote",
  "version": "0.1.0",
  "description": "AI音声文字起こし・話者分離サービス - 高精度な話者分離機能を持つ次世代音声処理プラットフォーム",
  "keywords": [
    "voice",
    "transcription",
    "speaker-separation",
    "ai",
    "nextjs",
    "firebase",
    "audio-processing"
  ],
  "author": "VoiceNote Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:export": "next build && next export",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest test/integration",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "firebase:build": "npm run build && firebase deploy --only hosting",
    "firebase:deploy": "firebase deploy",
    "cloud-run:build": "cd cloud-run && docker build -t voicenote-audio-processor .",
    "cloud-run:deploy": "cd cloud-run && ./deploy.sh dev",
    "cloud-run:deploy:prod": "cd cloud-run && ./deploy.sh prod"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.4.0",
    "lucide-react": "^0.525.0",
    "next": "15.3.4",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-fetch": "^3.3.2",
    "playwright": "^1.53.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5"
  }
}
